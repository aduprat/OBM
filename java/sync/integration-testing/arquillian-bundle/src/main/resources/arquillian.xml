<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
        
    <container qualifier="tomcat-managed-6" default="true">
        <configuration>
            <property name="javaVmArguments"> -Xmx512M -Xms512M -XX:MaxPermSize=512M -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=n</property>
            <property name="catalinaHome">${java.io.tmpdir}/tomcat/apache-tomcat-6.0.20</property>
            <property name="user">arquillian</property>
            <property name="pass">arquillian</property>
        </configuration>
    </container>
</arquillian>
